<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ближайшее опрыскивание"
            android:id="@+id/soonSpraying"
            android:layout_weight="0.45"
            android:singleLine="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Необходимый состав баковой смеси"
            android:id="@+id/mixture"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.64" />

        <GridLayout
            android:layout_width="359dp"
            android:layout_height="221dp">

            <Button
                android:layout_width="186dp"
                android:layout_height="65dp"
                android:text="Расчет Баковой Смеси"
                android:id="@+id/back"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:layout_width="186dp"
                android:layout_height="65dp"
                android:text="Препараты"
                android:id="@+id/reaktiv"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_width="186dp"
                android:layout_height="65dp"
                android:text="Календарь опрыскивания"
                android:id="@+id/celendar"
                android:layout_row="1"
                android:layout_column="0" />

            <Button
                android:layout_width="186dp"
                android:layout_height="65dp"
                android:text="Нужно купить"
                android:id="@+id/needbuy"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="186dp"
                android:layout_height="65dp"
                android:text="Сорта Винограда"
                android:id="@+id/sorts"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:layout_width="186dp"
                android:layout_height="65dp"
                android:text="Информация о прапаратах"
                android:id="@+id/information"
                android:layout_row="2"
                android:layout_column="1" />

        </GridLayout>

    </LinearLayout>
</RelativeLayout>
